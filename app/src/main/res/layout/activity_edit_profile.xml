<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#29d7d7d7">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#29d7d7d7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvetop"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="65dp"
                    android:paddingBottom="65dp"
                    android:text="รูปร้านค้า"
                    android:id="@+id/braneInput_textView"
                    android:layout_column="0"
                    android:textColor="#1A284F"
                    android:layout_weight="3" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="7"
                    android:src="@drawable/ic_e_shop"
                    android:background="@drawable/editbox"
                    />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="55dp"
                    android:id="@+id/uploadButton"
                    android:src="@drawable/upload_ic"
                    android:layout_weight="2.5" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:text="ชื่อร้านค้า"
                    android:id="@+id/nameShop_textView"
                    android:textColor="#1A284F" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/nameShop"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="3"
                    android:text="ที่อยู่"
                    android:id="@+id/addressShop_textView"
                    android:textColor="#1A284F" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/addressShop"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="65dp"
                    android:paddingBottom="65dp"
                    android:layout_weight="3"
                    android:text="แผนที่"
                    android:textColor="#1A284F" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_weight="7"
                    android:id="@+id/mapView"
                    android:background="@drawable/editbox"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:layout_marginTop="55dp"
                    android:layout_marginBottom="55dp"
                    android:id="@+id/mapButton"
                    android:src="@drawable/editmap_ic"
                    android:layout_weight="2.5" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvetop"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="ข้อมูลติดต่อ"
                    android:textSize="16dp"
                    android:layout_column="0"
                    android:textColor="#1A284F"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/curveline"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#1A284F" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="3"
                    android:text="มือถือ"
                    android:textColor="#1A284F" />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/editMobile"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="3"
                    android:text="โทรศัพท์"
                    android:textColor="#1A284F" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/editPhone"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvebuttom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="3"
                    android:text="แฟกซ์"
                    android:textColor="#1A284F" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/editFax"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="3"
                    android:text="LINE-ID"
                    android:textColor="#1A284F" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/editLine"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="3"
                    android:text="FACEBOOK"
                    android:textColor="#1A284F" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/editFacebook"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvebuttom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="20dp"
                    android:layout_weight="3"
                    android:text="WEB SITE"
                    android:textColor="#1A284F" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:ems="10"
                    android:id="@+id/editWeb"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvetop"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="บริการ"
                    android:textSize="16dp"
                    android:layout_column="0"
                    android:textColor="#1A284F"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@drawable/curveline"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="#1A284F" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/all"
                    android:layout_column="0"
                    android:textColor="#77aaff"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ทั้งหมด" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/curtain"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ผ้าม่าน" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mattress"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="เบาะ" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wallpaper"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="วอลเปเปอร์" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/roller"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ม่านม้วน" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bamboo"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="มู่ลี่ ต่างๆ" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/built_in"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="บิ้วอิน" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvebuttom"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/room_partition"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ฉากกั้นห้อง" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/vertical"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ม่านปรับแสง" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/furniture"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="เฟอร์นิเจอร์" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">
                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/buttonsave"
                    android:text="บันทึก"
                    android:id="@+id/saveProfile_button"
                    android:layout_column="0"
                    android:enabled="true"
                    android:textColor="#ffffffff"
                    android:layout_weight="1"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/buttoncancel"
                    android:text="ยกเลิก"
                    android:id="@+id/noChSet_button"
                    android:layout_column="0"
                    android:textColor="#ffffffff"
                    android:layout_weight="1"
                    android:textSize="20dp"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>