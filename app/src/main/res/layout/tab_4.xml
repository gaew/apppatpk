<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="#29d7d7d7">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_weight="1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#29d7d7d7">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="#29d7d7d7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingTop="10dp"
                android:background="@drawable/curvetop"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/ic_arrow" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/editbox"
                    android:hint="ค้นหาร้านตกแต่งภายใน"
                    android:id="@+id/search" />

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:id="@+id/search_button"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:background="#FFFFFF"
                    android:src="@drawable/search_ic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/ic_arrow" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/all"
                    android:layout_column="0"
                    android:textColor="#77aaff"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ทั้งหมด" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/curtain"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ผ้าม่าน" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/mattress"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="เบาะ" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wallpaper"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="วอลเปเปอร์" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/roller"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ม่านม้วน" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/bamboo"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="มู่ลี่ ต่างๆ" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/built_in"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="บิ้วอิน" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/curvecenter"
                android:orientation="horizontal">
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/room_partition"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ฉากกั้นห้อง" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/vertical"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="ม่านปรับแสง" />
                <CheckBox
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/furniture"
                    android:layout_column="0"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:text="เฟอร์นิเจอร์" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/curvebuttom"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/ic_arrow" />
                <Spinner
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:id="@+id/location"
                    android:layout_column="0" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/curveall"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:background="@drawable/viewbox_l"
                    android:gravity="center"
                    android:text="ชื่อร้านค้า"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="15dp"
                    android:background="@drawable/viewbox_c"
                    android:gravity="center"
                    android:text="ติดต่อ"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textSize="15dp"
                    android:background="@drawable/viewbox_c"
                    android:gravity="center"
                    android:text="ระดับ"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.5"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:background="@drawable/viewbox_r"
                    android:text="จังหวัด"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
