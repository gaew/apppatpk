<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34495e">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#34495e">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical"

            tools:context="com.first.triparky.caldecorate.settingMtaki"
            android:background="#34495e"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/curvetop"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:paddingTop="20dp"
                android:text="พับเย็บปิดข้าง ด้านละ"
                android:id="@+id/braneInput_textView1"
                android:layout_column="0"
                android:textColor="#1A284F"
                android:layout_weight="2" />
            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/setE_edittext"
                android:layout_column="0"
                android:hint="5"
                android:textColorHint="#afa3a3a3"
                android:layout_weight="2"
                android:textColor="#f39c12" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="ซ.ม."/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvebuttom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:text="พับเย็บใส่โซ่"
                    android:id="@+id/braneInput_textView2"
                    android:layout_column="0"
                    android:textColor="#1A284F"
                    android:layout_weight="2" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/setF_edittext"
                android:layout_column="0"
                android:hint="10"
                android:textColorHint="#afa3a3a3"
                android:layout_weight="2"
                android:textColor="#f39c12" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="ซ.ม."/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvetop"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="20dp"
                    android:text="เผื่อความกว้าง ด้านละ"
                    android:id="@+id/braneInput_textView3"
                    android:layout_column="0"
                    android:textColor="#1A284F"
                    android:layout_weight="2" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/setG_edittext"
                android:layout_column="0"
                android:hint="15"
                android:textColorHint="#afa3a3a3"
                android:layout_weight="2"
                android:textColor="#f39c12" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="ซ.ม."/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curvebuttom"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:text="เผื่อชายล่าง"
                    android:id="@+id/braneInput_textView4"
                    android:layout_column="0"
                    android:textColor="#1A284F"
                    android:layout_weight="2" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:gravity="center"
                android:id="@+id/setH_edittext"
                android:layout_column="0"
                android:hint="30"
                android:textColorHint="#afa3a3a3"
                android:layout_weight="2"
                android:textColor="#f39c12" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="ซ.ม."/>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curveall"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:text="เผื่อจำนวนผ้า"
                    android:id="@+id/braneInput_textView5"
                    android:layout_column="0"
                    android:textColor="#1A284F"
                    android:layout_weight="2" />

            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/setI_spin"
                android:layout_column="0"
                android:layout_weight="2" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:text="%."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">
            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/buttonsave"
                android:text="บันทึก"
                android:id="@+id/changeSet_button"
                android:layout_column="0"
                android:enabled="true"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:layout_weight="1" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/buttondefault"
                android:text="คืนค่า"
                android:id="@+id/noChSet_button"
                android:layout_column="0"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:layout_weight="1" />
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
